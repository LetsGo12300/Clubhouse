<div class="container-fluid p-4">

    <form class="center-item" action="/join-the-club/check" method="POST">
        <div class="row">
            <label class="col-form-label col-auto" for="passcode">Enter the correct passcode to join the club:</label>
            <div class="col-sm-3" style="min-width: 250px">
                <input class="form-control password-input" name="passcode" id="passcode" type="password"/>
            </div>
        </div>
        <div class="my-2">
            <input class="form-check-input" type="checkbox" id="checkbox" onclick="showPassword()">
            <label class="form-check-label" for="checkbox">Show Password</label>
        </div>
        <button class="btn btn-primary">Enter passcode</button>
    </form>
    
    <script src="/javascripts/toggle-password.js"></script>
    
